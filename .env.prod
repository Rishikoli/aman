# Production Environment Configuration
# Copy this file to .env.prod and update with your production values

# Database Configuration
DATABASE_NAME=aman_db_prod
DATABASE_USER=aman_user_prod
DATABASE_PASSWORD=your_secure_database_password_here
DATABASE_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379

# API Keys (Required - Replace with your actual keys)
FMP_API_KEY=your_financial_modeling_prep_api_key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key
POLYGON_API_KEY=your_polygon_io_api_key
GEMINI_API_KEY=your_gemini_api_key
NEWS_API_KEY=your_news_api_key
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Security Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_minimum_32_characters
SUPERSET_SECRET_KEY=your_very_secure_superset_secret_key_minimum_32_characters
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_admin_password

# Server Ports
BACKEND_PORT=3001
FRONTEND_PORT=3000
SUPERSET_PORT=8088

# Application URLs
NEXT_PUBLIC_API_BASE_URL=https://your-domain.com/api
NEXT_PUBLIC_APP_NAME=Autonomous M&A Navigator
NEXT_PUBLIC_SUPERSET_URL=https://your-domain.com/superset

# Logging Configuration
LOG_LEVEL=warn
PYTHON_LOG_LEVEL=WARNING

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Agent Configuration
AGENT_TIMEOUT=300
MAX_CONCURRENT_TASKS=5
RETRY_ATTEMPTS=3

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket-name
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9100
ALERT_EMAIL=admin@your-domain.com
SLACK_WEBHOOK_URL=your_slack_webhook_url_for_alerts